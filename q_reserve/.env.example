# Flask Configuration
FLASK_APP=app.py
FLASK_ENV=development
SECRET_KEY=your-secret-key-change-in-production
WTF_CSRF_SECRET_KEY=your-csrf-secret-key

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/q_reserve_dev
DATABASE_URL_TEST=postgresql://username:password@localhost:5432/q_reserve_test

# Redis Configuration (for caching and Celery)
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Email Configuration
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USE_SSL=false
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_DEFAULT_SENDER=your-email@gmail.com

# AI Services
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_EMBEDDING_MODEL=text-embedding-ada-002

# Translation Services
GOOGLE_TRANSLATE_API_KEY=your-google-translate-key
DEEPL_API_KEY=your-deepl-api-key

# File Upload Configuration
MAX_CONTENT_LENGTH=16777216  # 16MB
UPLOAD_FOLDER=static/uploads
ALLOWED_EXTENSIONS=txt,pdf,png,jpg,jpeg,gif,doc,docx

# Rate Limiting
RATELIMIT_STORAGE_URL=redis://localhost:6379/1

# Security
BCRYPT_LOG_ROUNDS=12
JWT_SECRET_KEY=your-jwt-secret-key
JWT_ACCESS_TOKEN_EXPIRES=3600

# Pagination
TICKETS_PER_PAGE=20
COMMENTS_PER_PAGE=10
USERS_PER_PAGE=25

# Notification Settings
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_REAL_TIME_NOTIFICATIONS=true
NOTIFICATION_POLL_INTERVAL=30000  # 30 seconds

# Integration Settings
SLACK_WEBHOOK_URL=your-slack-webhook-url
TEAMS_WEBHOOK_URL=your-teams-webhook-url
WEBHOOK_SECRET=your-webhook-secret

# Analytics and Monitoring
SENTRY_DSN=your-sentry-dsn
ENABLE_ANALYTICS=true
LOG_LEVEL=INFO

# SLA Configuration
DEFAULT_SLA_HOURS=24
URGENT_SLA_HOURS=4
HIGH_SLA_HOURS=8
MEDIUM_SLA_HOURS=24
LOW_SLA_HOURS=72

# Search Configuration
SEARCH_RESULTS_PER_PAGE=10
ENABLE_FULL_TEXT_SEARCH=true

# Theme and UI
DEFAULT_THEME=light
ENABLE_DARK_MODE=true

# Development Settings
DEBUG=true
TESTING=false

# Production Settings (set in production)
# DEBUG=false
# TESTING=false
# SSL_REDIRECT=true
# DATABASE_URL=postgresql://user:pass@prod-db:5432/q_reserve_prod